{
  "name": "soma-electron",
  "productName": "SomaPlayer",
  "version": "0.0.1",
  "main": "main.js",
  "description": "SomaFM Electron desktop app",
  "license": "MIT",
  "repository": "cheshire137/soma-electron",
  "author": {
    "name": "Sarah Vessels",
    "email": "cheshire137@gmail.com",
    "url": "3till7.net"
  },
  "scripts": {
    "test": "xo",
    "start": "electron .",
    "build": "npm run-script build-osx",
    "build-osx": "if [ -d dist/SomaPlayer-darwin-x64 ]; then rm -r dist/SomaPlayer-darwin-x64; fi && node_modules/electron-packager/cli.js . --out=dist --app-version=$npm_package_version --prune --asar --overwrite --icon=images/icon128.png.icns --appname=SomaPlayer --platform=darwin --arch=all --ignore=dist"
  },
  "files": [
    "main.js",
    "index/indexPage.js",
    "index/index.html",
    "index/index.css",
    "page/page.js",
    "page/page.css",
    "page/page.html",
    "settings/settings.css",
    "settings/settings.html",
    "settings/settingsPage.js",
    "images/icon48.png",
    "images/icon48-dark.png",
    "images/icon128.png",
    "models/eventful.js",
    "models/fetcher.js",
    "models/flashMessages.js",
    "models/lastfm.js",
    "models/linkHandler.js",
    "models/router.js",
    "models/settings.js",
    "models/soma.js",
    "about/about.html",
    "about/about.css"
  ],
  "keywords": [
    "electron-app",
    "electron",
    "last.fm",
    "somafm"
  ],
  "dependencies": {
    "crypto": "0.0.3",
    "electron-debug": "^1.0.0",
    "electron-json-storage": "^2.0.0",
    "node-fetch": "^1.5.2",
    "socket.io-client": "^1.4.6"
  },
  "devDependencies": {
    "devtron": "^1.1.0",
    "electron-packager": "^7.0.0",
    "electron-prebuilt": "^1.0.1",
    "xo": "^0.15.0"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ]
  }
}
